<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BackupFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:paddingBottom="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:text="@string/backup_rules"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:text="@string/backup_warn"
                android:textColor="?colorError"
                android:layout_height="wrap_content"/>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:id="@+id/local_layout"
                android:layout_marginTop="10dp"
                style="?attr/materialCardViewFilledStyle"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:textSize="20sp"
                        android:text="@string/local_backup"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/not_encrypted"
                    android:layout_height="wrap_content"/>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        app:dividerColor="?colorSecondary"
                        android:layout_height="wrap_content"/>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/backup"
                                android:layout_width="wrap_content"
                                android:text="@string/do_backup"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>
                            <Button
                                android:id="@+id/rest"
                                android:layout_width="wrap_content"
                                android:text="@string/do_restore"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:id="@+id/cloud_layout"
                android:layout_marginTop="10dp"
                android:animateLayoutChanges="true"
                android:paddingBottom="10dp"
                style="?attr/materialCardViewFilledStyle"
                android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:textSize="20sp"
                            android:text="@string/cloud_backup"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:id="@+id/last_backup"
                            android:text="@string/last_backup"
                            android:layout_height="wrap_content"/>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/auto_backup_switch"
                            android:visibility="gone"
                            android:text="@string/auto_backup"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleX="1.2"
                            android:scaleY="1.2"
                            android:src="@drawable/account"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/userEmailTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:text="@string/no_account"
                            android:textSize="20sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageView"
                            app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:paddingBottom="2dp"
                            android:gravity="center"
                            android:layout_height="wrap_content">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/logout_btn"
                                android:layout_weight="1"
                                android:textColor="?colorOnBackground"
                                style="?attr/materialButtonOutlinedStyle"
                                android:text="@string/sign_out"/>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/delete_btn"
                                android:textColor="?colorOnBackground"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_marginStart="5dp"
                                android:layout_weight="1"
                                android:text="@string/delete_account"/>

                        </LinearLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            app:dividerColor="?colorSecondary"
                            android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/auth_layout"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:id="@+id/emailEditText"
                            android:hint="@string/email"
                            android:layout_height="wrap_content"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:id="@+id/passwordEditText"
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            android:layout_height="wrap_content"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/log_btn"
                            android:text="@string/login"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/reg_btn"
                            android:text="@string/register"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/reset_btn"
                            android:textColor="?colorOnBackground"
                            style="?attr/materialButtonOutlinedStyle"
                            android:text="@string/forgot_pass"/>
                    </LinearLayout>
                </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/cloud_buttons"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/backup_cloud"
                                android:layout_width="wrap_content"
                                android:text="@string/do_backup"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>
                            <Button
                                android:id="@+id/rest_cloud"
                                android:layout_width="wrap_content"
                                android:text="@string/do_restore"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/progress_bar"
                            android:indeterminate="false" />

                </LinearLayout>

        </com.google.android.material.card.MaterialCardView>




            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

</FrameLayout>