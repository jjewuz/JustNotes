<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.Material3.DynamicColors.Light">
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/avd_anim</item>
        <item name="android:windowSplashScreenBackground">?colorSecondary</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/jjewuz</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowLightStatusBar">
            true
        </item>

        <item name="popupMenuBackground">@drawable/custom_popup</item>
    </style>

    <style name="Threedotsmenu" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="tint">@color/black</item>
    </style>

    <style name="Toolbar" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="DarkTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowSplashScreenBackground">?colorSecondary</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/jjewuz</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="actionOverflowButtonStyle">@style/Threedotsmenu</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/avd_anim</item>

    </style>

